.l-tab {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  background-color: #fff;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.l-tab::after {
  display: inline-block;
  content: '';
  height: 0rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  border-bottom: 1rpx solid #e9eaec;
}
.l-tab-fixed {
  position: fixed;
  top: 0;
  z-index: 2;
}
.l-tab-scroll {
  display: block;
  white-space: nowrap;
  overflow-x: auto;
}