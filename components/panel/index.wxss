.l-panel {
  position:relative;
  overflow:hidden;
}
.l-panel-title {
  font-size: 28rpx;
  line-height:1;
  color:#1c2438;
  padding: 40rpx 32rpx 20rpx
}
.l-panel-title-hide-top {
  padding-top: 0;
}
.l-panel-content {
  position:relative;
  background:#fff;
  overflow: hidden;
}
.l-panel-content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1rpx;
  border-bottom-width: 1rpx;
  left: 0;
  bottom: 0;
}
.l-panel-without-border::after {
  display: none;
}